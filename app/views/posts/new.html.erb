<center>	
<h1>New Post</h1>
<%= flash[:error] %>
<br>

<%= form_for @post, html: { multipart: true } do |f| %>
	<% f.label :image %>
	<%= f.file_field :image %> 
	<br>

	<div style="padding:0px 0px 5px 0px;">
	<%= f.label :description %>
	</div>
	<%= f.text_area :description %>
	<br>
	<br>
	<%= f.submit %>
	<br>
<% end %>
</center>